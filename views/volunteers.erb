<h2>Volunteer: <%= @volunteer.name %></h2>
<h3>Project: <%= @volunteer.project.name %></h3>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  
    <label for="volunteer_name">Volunteer name</label>
    <input id="volunteer_name" name="volunteer_name" class="form-control" type="text">
  
  <button type="submit" class="btn btn-success">Update volunteer</button>
</form>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete volunteer</button>
</form>

<a href="/projects/<%= @volunteer.project.id %>">Back to <%= @volunteer.project.name %></a>